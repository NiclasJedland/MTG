@model MTG.Models.ViewModel

<div class="cards row">
	@foreach(var card in Model.Cards.OrderBy(s => s.Rarity).ThenBy(s => s.Name))
	{
		<div class="card col-md-3">
			<a asp-controller="Home" asp-action="ShowCard" 
				asp-route-cardId="@card.Id" asp-route-setName="@card.Set">
				@if(card.Rarity == "Mythic Rare")
				{
					<div class="cardInfo text-center mythic">@card.Name</div>
				}
				else if(card.Rarity == "Rare")
				{
					<div class="cardInfo text-center rare">@card.Name</div>
				}
				<div class="cardInfo text-center">
					<img class="cardImg" src="@("/images/" + card.Set + "/" + card.Name + ".jpg")" />
				</div>
				<div class="cardInfo text-center text-info">@card.Set</div>				
			</a>
		</div>
	}
</div>